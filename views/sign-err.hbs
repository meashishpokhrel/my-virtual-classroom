                            <!--Validation Errors-->
                                    <div class="container" style="margin-top: 4%;">
                                    {{#if errors}}
                                        {{#each errors}}
                                        <div class="alert alert-danger" role="alert">
                                            {{msg}}
                                        </div>
                                        {{/each}}
                                    {{/if}}
                                    </div>

                            <form action="/users/signup" method="post">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">First name:</label>
                                        <input name="first_name" value="{{first_name}}" class="form-control" id="inputEmail4" placeholder="John">
                                      </div>
                                      <div class="form-group col-md-6 mb-3">
                                        <label for="inputPassword4">Last Name:</label>
                                        <input name="last_name" value="{{last_name}}" class="form-control" id="inputPassword4" placeholder="Cena">
                                      </div>
                                      <div class="form-group col-md-6 mb-3">
                                        <label for="inputPassword4">Username:</label>
                                        <input name="username" value="{{username}}" class="form-control" id="inputPassword4" placeholder="Cena">
                                      </div>
                                    
                                      <div class="form-group col-md-6 mb-2">
                                    <label for="inputEmail4">Email:</label>
                                    <input name="email" value="{{email}}" type="email" class="form-control" id="inputEmail4" placeholder="Email">
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="inputPassword4">Password:</label>
                                    <input name="password" value="{{password}}" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                                  </div>
                                  <div class="form-group col-md-6">
                                    <label for="inputPassword4"> Confirm Password:</label>
                                    <input name="password2" value="{{password2}}" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label for="inputAddress">Phone no:</label>
                                  <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text" id="basic-addon1">+977</span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Phone no:" aria-label="Username" aria-describedby="basic-addon1">
                                  </div>
                                </div>
                              <div class="form-row">
                                
                            <div class="form-group col-md-4 mb-2">
                                    <label for="inputState">You are?</label>
                                    <select name="type" id="inputState" class="form-control">
                                      <option selected>Choose...</option>
                                      <option value="student">Student</option>
                                      <option value="instructor">Teacher</option>
                                    </select>
                                  </div>
                                  
                                </div>
                                <div class="form-group">
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gridCheck">
                                    <label class="form-check-label" for="gridCheck">
                                      I agree
                                    </label>
                                  </div>
                                </div>
                             
                            
                                <div class="singel-form">
                                    <button class="main-btn" type="submit" >Sign Up</button>
                                </div>
                            </form>



