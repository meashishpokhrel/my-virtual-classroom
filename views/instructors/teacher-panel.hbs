<div class="container-fluid h-100">
   <div class="row h-100">
     <main class="col bg-faded py-3">
       <span class="text-center">
         <h1>{{instructor.first_name}}'s Dashboard</h1>
       </span>
       <div class="container">
         <table class="table box-wrapper text-center">
           <thead class="" style="background-color: #b8bad6;">
             <br />
             <tr>
               <th scope="col">Class Name</th>
               <th scope="col">All Lessons</th>
             </tr>
           </thead>
           <tbody>
             {{#each instructor.classes}}
               <tr>
                 <td>{{class_title}}</td>
                 <td><a href="/classes/{{class_id}}/lessons" class="cool-link">View Lessons</a></td>
               </tr>
             {{/each}}
           </tbody>
         </table>
       </div>
     </main>
   </div>
 </div>


 <main class="col bg-faded py-3" style="margin-top: 5%;">
  <div class="container box-wrapper">
    <form action="/instructors/classes/{{class_id}}/lesson/{{lesson_number}}/edit" method="post">
         <h1>Edit Lesson</h1>
      </span>
      <div class="form-group">
        <label for="name">Lesson number: </label>
        <input class="form-control" name="update_lesson_number" value="{{lesson_number}}" type="text" disabled>
      </div>
      <div class="form-group">
        <label for="name">Lesson title: </label>
        <input class="form-control" name="update_lesson_title" type="text" value="{{lesson_title}}">
      </div>
      <div class="form-group">
      <label for="exampleFormControlTextarea1">Content: </label>
      <textarea class="form-control" name="update_lesson_body" id="exampleFormControlTextarea1" rows="15">{{lesson_body}}</textarea>
    </div>
      <button type="submit" class="btn btn-custom mb-2"><i class="far fa-save" style="font-size:25px"></i> Save</button>
      <a href="/classes/{{class_id}}/lessons" class="btn btn-custom" style="margin-top: -8px;"><i class="fas fa-angle-double-left" style="font-size:25px"></i> Back</a>
    </form>
  </div>
</main>

<main class="col bg-faded py-3" style="margin-top: 5%;">
  <div class="container box-wrapper">
    <form action="/instructors/classes/{{class_id}}/lessons/new" method="post">
         <h1>New Lesson</h1>
      </span>
      <div class="form-group">
        <label for="name">Lesson number: </label>
        <input class="form-control" name="lesson_number" type="text" required>
      </div>
      <div class="form-group">
        <label for="name">Lesson title: </label>
        <input class="form-control" name="lesson_title" type="text" required>
      </div>
      <div class="form-group">
      <label for="exampleFormControlTextarea1">Content: </label>
      <textarea class="form-control" name="lesson_body" id="exampleFormControlTextarea1" rows="15" required></textarea>
    </div>
      <div style="margin-top: 3%;">
        <button type="submit" class="btn btn-custom mb-2"><i class="far fa-save" style="font-size:25px"></i> Save</button>
        <a href="/classes/{{class_id}}/lessons" class="btn btn-custom" style="margin-top: -8px;"><i class="fas fa-angle-double-left" style="font-size:25px"></i> Back</a>
      </div>
    </form>
  </div>
</main>
